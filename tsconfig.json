{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "Node",
        "target": "es2019",
        "jsx": "preserve",
        "strictFunctionTypes": true,
        "outDir": "./lib",
        "strict": true,
        "declaration": true,
        "esModuleInterop": true,
    },
    "include": ["src"],
    "exclude": [
        "node_modules",
        "test",
        "assets",
        "**/node_modules/*"
    ]
}